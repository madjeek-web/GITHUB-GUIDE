# EditorConfig helps maintain consistent coding styles
# across different editors and IDEs.
# See https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.json]
indent_size = 2

[*.php]
indent_size = 4

[*.java]
indent_size = 4

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

